<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- Undo-bar styles -->
    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/undo_bar_height</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/undo_bar_outer_margin</item>
        <item name="android:layout_marginRight">@dimen/undo_bar_outer_margin</item>
        <item name="android:layout_marginBottom">@dimen/undo_bar_bottom_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">@dimen/undo_bar_max_width</item>
        <item name="android:background">@drawable/root_background</item>
    </style>

    <style name="Message">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/undo_bar_padding</item>
        <item name="android:paddingRight">@dimen/undo_bar_padding</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/message_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/message_background</item>
    </style>

    <style name="ButtonWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/button_wrapper_background</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/undo_bar_padding</item>
        <item name="android:paddingRight">@dimen/undo_bar_padding</item>
        <item name="android:drawableLeft">@drawable/ic_action_undo</item>
        <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:text">@string/undo</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

</resources>